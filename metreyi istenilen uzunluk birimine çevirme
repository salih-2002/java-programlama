import java.util.Scanner;
public class birimçevirme {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        System.out.println("metre cinsinden değer giriniz");
        double metre=input.nextDouble();
        double km=metre*1/1000;
        System.out.println("hesaplanan kilometre;"+km);
        double hm=metre*1/100;
        System.out.println("hesaplanan hektometre;"+hm);
        double dam=metre*1/10;
        System.out.println("hesaplanan dekametre;"+dam);
        double dm=metre*10;
        System.out.println("hesaplanan desimetre;"+dm);
        double cm=metre*100;
        System.out.println("hesaplanan santimetre;"+cm);
        double mm=metre*1000;
        System.out.println("hesaplanan milimetre;"+mm);
        // TODO code application logic here
    }
    
}
