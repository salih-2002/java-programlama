 * @author ACER
 */
import java.util.Scanner;
public class payvepaydadeğerleri {
    
    

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner input=new Scanner (System.in);
        System.out.println("payı giriniz");
        int pay=input.nextInt();
        System.out.println("paydayı giriniz");
        int payda=input.nextInt();
        System.out.println("istenilen basamak değerini giriniz");
        int sayı=input.nextInt();
        int c;
        int k =pay/payda;
        for(int i=1;i<=sayı;i++){
            c=k%10;
            k=k/10;
            if(i==sayı){
                System.out.println("istenilen basamak değeri="+c);
            }
        }
                
                
        
        
    }
    
}
